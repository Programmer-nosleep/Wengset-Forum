<section id="body">
  <section>
    <div class="container-wrapper">
      <div class="wrapper-design">
        <div class="wrapper-in">
          <div class="wrapper-header">
            <h1>Sign Up</h1>
          </div>

          {{#if errors}}
            <div class="form-errors">
              <ul>
                {{#each errors}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </div>
          {{/if}}

          <form class="form-wrapper" method="post" action="/auth/signup">
            <label for="user" id="text-label">Username</label>
            <input type="text" name="username" value="{{values.username}}" autocomplete="username" />

            <label for="email" id="text-label">Email</label>
            <input type="email" name="email" value="{{values.email}}" autocomplete="email" />

            <label for="pass" id="text-label">Password</label>
            <input type="password" name="password" autocomplete="new-password" />

            <div class="btn-login-design">
              <button class="btn-text" type="submit">Create Account</button>
            </div>
          </form>

          <ul id="container-list">
            <li><a href="/auth/login">Sign In</a></li>
            <li><a href="/">Back Home</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</section>
